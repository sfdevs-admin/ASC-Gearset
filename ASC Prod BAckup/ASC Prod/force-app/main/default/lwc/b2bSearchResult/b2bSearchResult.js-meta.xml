<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>B2B Search Results</masterLabel>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property
                name="showCategoyBannerImage"
                label="Show Categoy Banner Image"
                type="Boolean"
                default="true"
            />
            <property
                name="recordId"
                type="String"
                label="Record Id"
                description="The category ID of the results being displayed"
            />
            <property
                name="resultsLayout"
                label="Results Layout"
                type="String"
                default="grid"
                datasource="java://siteforce.communitybuilder.datasource.B2BSearchResultsPanelLayoutDataSource"
            />
            <property
                name="showProductImage"
                label="Show Product Image"
                type="Boolean"
                default="true"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>